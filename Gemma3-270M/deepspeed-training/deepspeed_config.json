{
  "train_batch_size": 32,
  "train_micro_batch_size_per_gpu": 4,
  "gradient_accumulation_steps": 2,

  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 3e-4,
      "betas": [0.9, 0.95],
      "eps": 1e-8,
      "weight_decay": 0.1
    }
  },

  "scheduler": {
    "type": "WarmupCosineLR",
    "params": {
      "warmup_num_steps": 100,
      "total_num_steps": 5000
    }
  },

  "bf16": { "enabled": true },

  "zero_optimization": {
    "stage": 3,
    "offload_param": { 
      "device": "cpu", 
      "pin_memory": true 
    },
    "offload_optimizer": { 
      "device": "cpu", 
      "pin_memory": true 
    },
    "sub_group_size": 1e9,
    "reduce_bucket_size": 5e8,
    "stage3_prefetch_bucket_size": 5e6,
    "stage3_param_persistence_threshold": 1e5
  },

  "gradient_clipping": 1.0,
  
  "wall_clock_breakdown": false,
  "steps_per_print": 10
}