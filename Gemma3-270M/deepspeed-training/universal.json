{
    "train_batch_size": 8,
    "train_micro_batch_size_per_gpu": 1,
    "gradient_accumulation_steps": 1,
  
    "optimizer": {
      "type": "AdamW",
      "params": {
        "lr": 3e-4,
        "betas": [0.9, 0.95],
        "eps": 1e-8,
        "weight_decay": 0.1
      }
    },
  
    "scheduler": {
      "type": "WarmupCosineLR",
      "params": {
        "warmup_num_steps": 10,
        "total_num_steps": 50
      }
    },
  
    "bf16": { "enabled": true },
  
    "zero_optimization": {
          "stage": 3,
          "offload_optimizer": {
              "device": "cpu",
              "pin_memory": true
          },
          "offload_param": {
              "device": "cpu",
              "pin_memory": true
          },
          "overlap_comm": true,
          "contiguous_gradients": true,
          "sub_group_size": 1e9,
          "reduce_bucket_size": "auto",
          "stage3_prefetch_bucket_size": "auto",
          "stage3_param_persistence_threshold": "auto",
          "stage3_max_live_parameters": 1e9,
          "stage3_max_reuse_distance": 1e9,
          "stage3_gather_16bit_weights_on_model_save": true
    },
  
    "gradient_clipping": 1.0,
    "wall_clock_breakdown": false,
    "steps_per_print": 10,
    "flops_profiler": { "enabled": false },

    "load_dir": "/home/jovyan/Gemma/universal_chkpt",
    "universal_checkpoint": true,
    "resume_from_universal_checkpoint": true

  }
  